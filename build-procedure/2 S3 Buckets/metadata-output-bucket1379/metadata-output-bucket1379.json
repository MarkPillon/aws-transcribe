{
    "Version": "2012-10-17",
    "Statement": [
    
      {
        "Sid": "DenyNonHTTPS",
        "Effect": "Deny",
        "Principal": "*",
        "Action": "s3:*",
        "Resource": [
          "arn:aws:s3:::metadata-output-bucket1379",
          "arn:aws:s3:::metadata-output-bucket1379/*"
        ],
        "Condition": {
          "Bool": { "aws:SecureTransport": "false" }
        }
      },
      
      {
        "Sid": "AllowStepFunctionsWrite",
        "Effect": "Allow",
        "Principal": {
          "AWS": "arn:aws:iam::<ACCOUNT_ID>:role/PCA-StepFunctions-Role"
        },
        "Action": "s3:PutObject",
        "Resource": "arn:aws:s3:::metadata-output-bucket1379/*"
      },
      
      {
        "Sid": "AllowLambdaRead",
        "Effect": "Allow",
        "Principal": {
          "AWS": "arn:aws:iam::<ACCOUNT_ID>:role/PCA-Lambda-Role"
        },
        "Action": "s3:GetObject",
        "Resource": "arn:aws:s3:::metadata-output-bucket1379/*"
      }
    ]
  }